datasource db {
  provider = "mongodb"
  url      = env("COSMOS_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/cosmos-client"
}

// 일반 상품 모델
model Qoo10NormalProduct {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  itemCode              String    @unique
  companyId             String
  platformId            String
  sellerId              String?
  sellerAuthKey         String?
  flag                  String    @default("NONE")
  sellerCode            String?
  itemStatus            String?
  itemTitle             String?
  promotionName         String?
  mainCatCd            String?
  mainCatNm            String?
  firstSubCatCd        String?
  firstSubCatNm        String?
  secondSubCatCd       String?
  secondSubCatNm       String?
  drugType             String?
  productionPlaceType  String?
  productionPlace      String?
  industrialCodeType   String?
  industrialCode       String?
  retailPrice          Float?
  itemPrice            Float?
  taxRate              Float?
  settlePrice          Float?
  itemQty              Int?
  expireDate           DateTime?
  shippingNo           String?
  modelNM              String?
  manufacturerDate     String?
  brandNo              String?
  material             String?
  adultYN              String?
  contactInfo          String?
  itemDetail           String?   @db.String
  imageUrl             String?
  videoURL             String?
  keyword              String?
  listedDate           DateTime?
  changedDate          DateTime?
  lastFetchDate        DateTime?
  options              NormalOption[]
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@map("qoo10_normal_products")
}

// 무브 상품 모델
model Qoo10MoveProduct {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  itemCode              String    @unique
  companyId             String
  platformId            String
  sellerId              String?
  sellerAuthKey         String?
  flag                  String    @default("MOVE")
  sellerCode            String?
  itemStatus            String?
  itemTitle             String?
  itemSeriesName        String?
  promotionName         String?
  secondSubCat          String?
  brandNo              String?
  retailPrice          Float?
  itemPrice            Float?
  taxRate              Float?
  expireDate           DateTime?
  desiredShippingDate  Int?
  availableDateValue   String?
  shippingNo           String?
  weight               Float?
  adultYN              String?
  contactInfo          String?
  itemDetail           String?   @db.String
  keyword              String?
  attributeInfo        String?
  materialInfo         String?
  materialNumber       String?
  optionType           String?
  optionMainimage      String?
  optionSubimage       String?
  optionQty            String?
  originType           String?
  originCountryId      String?
  originRegionId       String?
  originOthers         String?
  seasonType           String?
  styleNumber          String?
  tpoNumber            String?
  videoNumber          String?
  washinginfoFit       String?
  washinginfoLining    String?
  washinginfoSeethrough String?
  washinginfoStretch   String?
  washinginfoThickness String?
  washinginfoWashing   String?
  options              MoveOption[]
  lastFetchDate        DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@map("qoo10_move_products")
}

// 일반 상품 옵션 모델
model NormalOption {
  id            String             @id @default(auto()) @map("_id") @db.ObjectId
  productId     String             @db.ObjectId
  name1         String?
  value1        String?
  name2         String?
  value2        String?
  name3         String?
  value3        String?
  name4         String?
  value4        String?
  name5         String?
  value5        String?
  price         Float?
  qty           Int?
  itemTypeCode  String?
  product       Qoo10NormalProduct @relation(fields: [productId], references: [id])
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  @@map("qoo10_normal_options")
}

// 무브 상품 옵션 모델
model MoveOption {
  id            String           @id @default(auto()) @map("_id") @db.ObjectId
  productId     String           @db.ObjectId
  color         String
  size          String
  qty           Int
  itemTypeCode  String?
  price         Float?
  product       Qoo10MoveProduct @relation(fields: [productId], references: [id])
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@map("qoo10_move_options")
} 