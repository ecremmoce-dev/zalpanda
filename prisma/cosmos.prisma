  contactInfo          String?
  desiredShippingDate  Int?
  expirationDateType   String?
  expirationDateMFD    String?
  expirationDatePAO    String?
  expirationDateEXP    String?
  expireDate           String?
  imageOtherUrl        String?
  industrialCode       String?
  industrialCodeType   String?
 
